#!/usr/bin/env bash

# navigation

cd() {
    command pushd "$@" > /dev/null;
}
popd() {
    command popd "$@" > /dev/null;
}
cdd() {
    cd "$@" && ll;
}
mkd() {
    mkdir -p "$@" && cd "$_";
}

# utilities

calc() {
    echo "$*" | bc -l;
}

mkalert() {
    [ $1 ] || { echo "missing time (e.g. 10:30)"; return 1; }

    echo 'spd-say "the timer has expired" -r -50 -t male3' | at $1
}

weather() {
    local LOCALE=$(echo ${LANG:-en} | cut -c1-2)
    if [ $# -eq 0 ]; then
        local LOCATION=$(curl -s ipinfo.io/loc)
    else
        local LOCATION=$1
    fi
    curl -s "$LOCALE.wttr.in/$LOCATION?format=v2"
}

# media

play-discogs() {
    # Plays audio for a Discogs release
    [ $1 ] || { echo "missing URL"; return 1; }

    curl -sS $1 \
    | xmllint --html --xpath 'string(//*[@id="dsdata"])' 2>/dev/null - \
    | jq \
    | grep -P 'youtubeId' \
    | cut -d \" -f 4 \
    | awk '{print "https://www.youtube.com/watch?v=" $0}' \
    | xargs mpv --no-video
}

play-yt() {
    # Plays audio for all YouTube video URLs on a site
    [ $1 ] || { echo "missing URL"; return 1; }

    curl -sS $1 | tac | tac \
    | tac | tac \
    | grep -oP 'https:\/\/www\.youtube\.com\/watch[^ "]+' \
    | xargs mpv --no-video
}

play-mp3s() {
    # Plays all mp3s on a website
    [ $1 ] || { echo "missing URL"; return 1; }

    curl -A "Mozilla/8.0" -sS $1 \
    | xmllint --html --xpath '//a[substring(@href, string-length(@href) - string-length(".mp3") + 1) = ".mp3"]/@href' - \
    | sed 's/^ href="\|"$//g' \
    | mpv -no-video --playlist=-
}

dl-mp3s() {
    # Downloads all mp3s on a website
    [ $1 ] || { echo "missing URL"; return 1; }

    wget -r -l1 -H -nd -A mp3 -e robots=off $1
}

play-bc-album() {
    # Plays an album from Bandcamp
    [ $1 ] || { echo "missing URL"; return 1; }

    curl -sS $1 \
    | xmllint --html --xpath '//script[@data-tralbum]/@data-tralbum' 2>/dev/null - \
    | sed 's/^ data-tralbum="\|"$//g' \
    | perl -MHTML::Entities -pe 'decode_entities($_);' \
    | jq -r '.trackinfo[].file."mp3-128"' \
    | mpv -no-video --playlist=-
}

play-bc-artist() {
    # Plays all albums for an artist on Bandcamp
    [ $1 ] || { echo "missing URL"; return 1; }

    curl -sS "$1/music" \
    | xmllint --html --xpath '//a[@href]/@href' 2>/dev/null - \
    | grep -oP '/album[^"]+' \
    | awk -v url=$1 '{print url$1}' \
    | xargs curl -sS \
    | xmllint --html --xpath '//script[@data-tralbum]/@data-tralbum' 2>/dev/null - \
    | sed 's/^ data-tralbum="\|"$//g' \
    | perl -MHTML::Entities -pe 'decode_entities($_);' \
    | jq -r '.trackinfo[].file."mp3-128"' \
    | mpv -no-video --playlist=-
}

play-bc-collection() {
    # Plays a collection on Bandcamp
    [[ $1 ]] && url="$1" || url="https://bandcamp.com/ggorlen/"

    curl -sS $url \
    | xmllint --html --xpath '//*[@id="pagedata"]/@data-blob' 2>/dev/null - \
    | sed 's/^ data-blob="\|"$//g' \
    | perl -MHTML::Entities -pe 'decode_entities($_);' \
    | jq '{fan_id: .fan_data.fan_id, 
           older_than_token: .wishlist_data.last_token, count: 10}' \
    | curl -sS -X POST -H "Content-Type: Application/JSON" \
      --data-binary @- https://bandcamp.com/api/fancollection/1/collection_items \
    | jq -r .items[].item_url \
    | xargs curl -sS \
    | xmllint --html --xpath '//script[@data-tralbum]/@data-tralbum' 2>/dev/null - \
    | sed 's/^ data-tralbum="\|"$//g' \
    | perl -MHTML::Entities -pe 'decode_entities($_);' \
    | jq -r '.trackinfo[].file."mp3-128"' \
    | mpv -no-video --playlist=-
}

